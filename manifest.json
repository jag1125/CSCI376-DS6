{
    "manifest_version": 3,
    "name": "Productivity Pet",
    "description": "A pet that grows the more you get done!",
    "version": "1.0",
    "permissions": ["storage"],
    "host_permissions": [],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "img/cat16.png",
        "32": "img/cat32.png",
        "48": "img/cat48.png",
        "128": "img/cat128.png"

        },
        "default_background": "img/ds6background.png"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": ["<all_urls>"]
        }
      ]
  }