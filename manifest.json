{
    "manifest_version": 3,
    "name": "Procrastination Pet",
    "description": "A pet that grows the more you get done!",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "",
        "32": "",
        "48": "",
        "128": ""
        }
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": ["<all_urls>"]
        }
      ]
  }